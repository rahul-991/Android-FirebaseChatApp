<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUserRegistration"
    android:theme="@style/Base.Theme.AppCompat"
    android:background="@android:color/holo_blue_light">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="56dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:weightSum="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/UserProfilePicture"
                android:layout_height="120dp"
                android:layout_marginBottom="50dp"
                tools:civ_border_width="2dp"
                tools:civ_border_color="#FF000000"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.14"
                android:layout_width="120dp" />

            <!--  Name Label -->
                            <EditText android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:hint="Name"
                    android:textColorLink="@android:color/holo_orange_light"
                                android:textColorHint="@color/cardview_dark_background"
                                android:textColor="@color/white" />


            <!-- Email Label -->

                <EditText android:id="@+id/emailID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textColor="@color/white" />


            <!-- Password Label -->

                <EditText android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:maxLines="2"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textColor="@color/white" />


            <!-- Signup Button -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/CreateAcctButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:text="Create Account"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:background="@color/black" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/SignOutButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="SIGN OUT"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:background="@color/black" />

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>